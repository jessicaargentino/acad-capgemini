programa
{
	
	funcao inicio()
	{
		inteiro A, B, C, equacao = 0
		
		escreva("Digite o valor de A: ")
		leia(A)
		escreva("Digite o valor de B: ")
		leia(B)
		escreva("Digite o valor de C: ")
		leia(C)
		equacao = ((A + B)*C)
		escreva("O resultado da soma de A e B multiplicado por C é: " , equacao)
	}
}
