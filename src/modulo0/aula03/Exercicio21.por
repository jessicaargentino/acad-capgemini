programa
{
	
	funcao inicio()
	{
		inteiro numero, contador = 1
			
		faca{
			escreva("\nDigite um número diferente de 0 ou 0 para sair: ")
			leia(numero)

			enquanto(contador <= numero){
				escreva(contador, "\n")
				contador++
			}
		}enquanto(numero > 1)

	}
}
